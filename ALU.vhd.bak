ENTITY ALU IS
	PORT(
		INPUT_A: IN INTEGER;
		INPUT_B: IN INTEGER;
		OP: IN BIT_VECTOR(1 DOWNTO 0);
		RESULT: OUT INTEGER
		);
END ENTITY;

ARCHITECTURE ALU_arch OF ALU IS
	BEGIN
		WITH OP SELECT
			RESULT <= (INPUT_A + INPUT_B) WHEN "00",
						 (INPUT_A - INPUT_B) WHEN "01",
						 (INPUT_A * INPUT_B) WHEN "10",
						 (INPUT_A / INPUT_B) WHEN "11";						
END ARCHITECTURE;